<% include header %>
	<div class="form-group">
		<form name="signInForm" action="sign-in" method="post" class="form-group">
			<label for="username">Username:</label>
			<input name="username" placeholder="Enter Username" class="form-control" width="200"></br>
			<label for="password">Password:</label>
			<input name="password" placeholder="Create Password" class="form-control" width="200"></br>
			<input type="submit" id="signIn" value="Sign In" class="btn btn-primary">
		</form>
	</div>
	<div class="form-group">
		<form name="signUpForm" action="sign-up" method="post" class="form-group">
			<label for="username">Username:</label>
			<input name="username" placeholder="Enter Username" class="form-control" width="200"></br>
			<label for="password">Password:</label>
			<input name="password" placeholder="Create Password" class="form-control" width="200"></br>
			<input type="submit" id="signUp" value="Register" class="btn btn-primary">
		</form>
	</div>
<% include footer %>