<% include header %>

<h2>Add New Language</h2>

<form method="post" role="form">
	<div class="form-group">
		<label for="title">Name</label>
		<input id="title" type="text" class="form-control" name="title" placeholder="Enter language" required>
	</div>
	<div class="form-group">
		<label for="content">Description</label>
		<textarea id="body" class="form-control" name="body" placeholder="Enter description" rows="3" required></textarea>
	</div>
	<div class="form-group">
		<input type="submit" value="Post Language" class="btn btn-primary">
		<a href="\" class="btn btn-primary pull-right">Back</a>
	</div>
</form>

<% include footer %>